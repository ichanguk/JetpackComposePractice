<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.JetpackComposePractice"
        tools:targetApi="31">
        <activity
            android:name=".ImageActivity"
            android:exported="true"
            android:label="@string/title_activity_image"
            android:theme="@style/Theme.JetpackComposePractice" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TextFieldActivity"
            android:exported="true"
            android:label="@string/title_activity_text_field"
            android:theme="@style/Theme.JetpackComposePractice" />
        <activity
            android:name=".ColumnSpacerDividerActivity"
            android:exported="true"
            android:label="@string/title_activity_column_spacer_divider"
            android:theme="@style/Theme.JetpackComposePractice"/>
        <activity
            android:name=".RememberActivity"
            android:exported="true"
            android:label="@string/title_activity_remember"
            android:theme="@style/Theme.JetpackComposePractice" />
        <activity
            android:name=".ButtonToastActivity"
            android:exported="true"
            android:label="@string/title_activity_button_toast"
            android:theme="@style/Theme.JetpackComposePractice" />
        <activity
            android:name=".TextActivity"
            android:exported="true"
            android:label="@string/title_activity_text"
            android:theme="@style/Theme.JetpackComposePractice" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.JetpackComposePractice" />
    </application>

</manifest>